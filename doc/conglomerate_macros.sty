\usepackage{amsmath} % for \@ifempty
\newcommand{\email}[1]{\textless #1\textgreater}
\newcommand{\emailLink}[3][]{%
  % #1 := subject (optional)
  % #2 := name
  % #3 := email address
  \@ifempty{#1}
  {#2 \textless\href{mailto:#2\%20\%3C#3\%3E}{#3}\textgreater}
  {#2 \textless\href{mailto:#2\%20\%3C#3\%3E?subject=#1}{#3}\textgreater}
}
\newcommand{\sidewise}[1]{%
  \begin{sideways}
    #1
  \end{sideways}
}
\newcommand{\sidecomment}[2]{%
  \underbrace{#1}_{\sidewise{#2}}
}
\newcommand{\makefigure}{\@ifstar{\makefigureStar}{\makefigureNoStar}}
\newcommand{\makefigureNoStar}[4]{%
  \begin{figure}[htbp]
    \centering
    \fbox{
      \includegraphics[width=#1\textwidth]{#2}
    }
    \caption{#3}
    \label{#4}
  \end{figure}
}
\newcommand{\makefigureStar}[4]{%
  \begin{figure}[htbp]
    \centering
    \includegraphics[width=#1\textwidth]{#2}
    \caption{#3}
    \label{#4}
  \end{figure}
}
\newcommand{\makefig}[3]{%
  \begin{figure}[htbp]
    \centering
      #1
    \caption{#2}
    \label{#3}
  \end{figure}
}
\newcommand{\makeboximage}[2]{%
  \begin{center}
    \fbox{
      \includegraphics[width=#1\textwidth]{#2}
    }
  \end{center}
}
\newcommand{\pseudocode}[3]{
\begin{figure}[htbp]
  \rule{\textwidth}{0.3mm}
  {\small
    \begin{algorithmic}[1]
      #1
    \end{algorithmic}
  }
  \rule{\textwidth}{0.3mm}
  \caption{#3}
  \label{#2}
\end{figure}
}
\definecolor{gray}{gray}{.5}
\newcommand{\cquote}[2]{
  \begin{center}
    \addtolength{\linewidth}{-1.2cm}
    \begin{minipage}[b][][t]{\linewidth}
      \begin{itemize}
      \item[{\color{gray} {\Huge \textquotedblleft}}] \textit{#1}
      \end{itemize}
    \end{minipage}
    \addtolength{\linewidth}{1.2cm}
    \begin{minipage}[t][][t]{1cm}
      {\color{gray} {\Huge \textquotedblright}}
    \end{minipage}
  \end{center}
  \hfill\textit{#2}
}
