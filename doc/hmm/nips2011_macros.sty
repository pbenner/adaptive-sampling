% Title[logo]{main title}{subtitle}{authors}{institutions}{}
\providecommand{\Titel}[5][]{
  \vspace*{-1.3cm}
  \begin{singlespacing}
    \fbox{\colorbox{white}{
        \addtolength{\textwidth}{-0.95cm}
        \begin{minipage}{\textwidth}
          \addtolength{\textwidth}{0.95cm}
          \begin{center}
            \parbox[c]{11cm}{
              \ifthenelse{\equal{logo}{#1}}{
                \includegraphics[totalheight=11cm]{graphics/minerva.pdf}
              }{}
            }
            \hspace{0.4cm}
            \parbox[c][12.6cm]{60.0cm}{
              \begin{center}
                \Huge
                \textbf{\textcolor{darkred}{#2}}
                \\[8mm]
                \Large
                #3
                \\[7mm]
                \large\it
                #4
                \\[8mm]
                \large
                #5
              \end{center}
            }
            \parbox[c]{7cm}{
              \ifthenelse{\equal{logo}{#1}}{
                \includegraphics[totalheight=7cm]{graphics/nips.pdf}
              }{}
            }
          \end{center}
        \end{minipage}
      }
    }
  \end{singlespacing}
}

