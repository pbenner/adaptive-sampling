#ifndef DATATYPES_H
#define DATATYPES_H

#include <config.h>

/* Use long double for probabilities. */
#undef PROB_T

typedef PROB_T prob_t;

typedef struct vector {
        int size;
        double *vec;
} Vector;

typedef struct matrix {
        int rows;
        int columns;
        double **mat;
} Matrix;

typedef struct options {
        prob_t epsilon;
        int verbose;
        int gmp;
        int likelihood;
        int bprob;
        int which;
} Options;

#endif /* DATATYPES_H */
